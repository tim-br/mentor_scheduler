    <div id="team-members">
      <div class="member">
        <a href="/mentors/<%=mentor.id%>"><img src="images/1_profile_photo.jpg"></a>
        <div class="name">
          <%= mentor.full_name %>
        </div>
      </div>
    </div>
      <% end %>
  <% end %>  
  <div id="team-members">
    <div class="member">
      <a href="/mentors/new"><img src="images/add_mentor.jpg"></a>
      <div class="name">
        Add Mentor
      </div>
    </div>
  </div>

</div>
